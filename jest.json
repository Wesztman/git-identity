{
    "rootDir": ".",
    "transform": {
        "^.+\\.(ts|tsx)$": [
            "ts-jest",
            {
                "tsconfig": "tsconfig.test.json"
            }
        ]
    },
    "testRegex": "tests/.*\\.test\\.ts$",
    "testPathIgnorePatterns": [
        "<rootDir>/node_modules/"
    ],
    "moduleFileExtensions": [
        "ts",
        "js"
    ],
    "collectCoverage": true,
    "coverageReporters": [
        "json",
        "lcov",
        "text",
        "html"
    ],
    "coveragePathIgnorePatterns": [
        "<rootDir>/node_modules/"
    ]
}