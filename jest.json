{
    "rootDir": ".",
    "transform": {
        "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "tests/.*\\.test\\.ts$",
    "testPathIgnorePatterns": [
        "<rootDir>/node_modules/"
    ],
    "moduleFileExtensions": [
        "ts",
        "js"
    ],
    "collectCoverage": true,
    "coverageReporters": [
        "json",
        "lcov",
        "text",
        "html"
    ],
    "coveragePathIgnorePatterns": [
        "<rootDir>/node_modules/"
    ],
    "globals": {
        "ts-jest": {
            "tsConfig": "tsconfig.test.json"
        }
    }
}