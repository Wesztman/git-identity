{
  "name": "git-identity",
  "displayName": "Git-Identity switcher",
  "description": "Adds a button to easily switch between different Git authors",
  "version": "1.0.1",
  "license": "MIT",
  "publisher": "stephtr",
  "keywords": [
    "Git",
    "author",
    "user",
    "switch",
    "identity"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/stephtr/git-identity"
  },
  "author": {
    "name": "Stephan Troyer",
    "url": "https://github.com/stephtr/git-identity"
  },
  "icon": "images/logo.png",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:.git"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Git-Identity switcher configuration",
      "properties": {
        "git-identity.authors": {
          "type": "array",
          "default": [],
          "description": "Available Git authors (each entry should be of the form 'John Doe john@doe.com')"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "jest --config jest.json",
    "lint": "eslint -c .eslintrc.js --ext .ts ./src"
  },
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.87.0",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.57.0",
    "jest": "^24.8.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.3.1"
  }
}
